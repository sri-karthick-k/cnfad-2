<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"
                                             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                                             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="college" class="com.example.ciesecond.College">
        <property name="name" value="RVCE"/>
        <property name="address" value="pattanagere"/>
    </bean>

    <bean id="department" class="com.example.ciesecond.Department">
        <constructor-arg ref="college"/>
    </bean>


</beans>